# ============================================
# POLYMARKET HFT BOT CONFIGURATION
# ============================================

# Mode - IMPORTANT: Start with dry run!
DRY_RUN=true                    # true = paper trading, false = real money

# Wallet Configuration (NEVER COMMIT REAL VALUES!)
PRIVATE_KEY=0x_YOUR_PRIVATE_KEY_HERE
FUNDER_ADDRESS=0x_YOUR_POLYMARKET_WALLET_ADDRESS

# Polygon RPC (use private endpoint for production)
RPC_URL=https://polygon-rpc.com

# ============================================
# STRATEGY PARAMETERS
# ============================================

# Oracle Latency Arbitrage
MIN_EDGE_PERCENT=2.0            # Minimum expected profit after fees (%)
MAX_POSITION_USD=100.0          # Maximum position size per trade
ANNUAL_VOLATILITY=0.80          # BTC annual volatility estimate
SNIPE_COOLDOWN_SECONDS=5.0      # Cooldown between snipes

# Market Making Parameters
SPREAD_BPS=50                   # Spread in basis points (50 = 0.5%)
QUOTE_SIZE=50                   # Quote size in shares
MAX_INVENTORY_IMBALANCE=0.30    # Max inventory skew before adjustment
QUOTE_REFRESH_MS=1000           # Quote refresh interval

# ============================================
# RISK MANAGEMENT
# ============================================

DAILY_LOSS_LIMIT_USD=500        # Stop trading if daily loss exceeds
MAX_OPEN_POSITIONS=5            # Maximum concurrent positions
MAX_SINGLE_TRADE_USD=100        # Maximum single trade size

# ============================================
# RATE LIMITING & PERFORMANCE
# ============================================

MAX_ORDERS_PER_SECOND=50        # Polymarket allows 350, stay safe
ORDER_LIFETIME_MS=3000          # Cancel stale orders after

# ============================================
# LOGGING & MONITORING
# ============================================

LOG_LEVEL=INFO
METRICS_PORT=9305
